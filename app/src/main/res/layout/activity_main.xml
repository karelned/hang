<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#848395F3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="395dp"
            app:srcCompat="@mipmap/ppp_foreground" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonHrat"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:onClick="zacniHrat"
                android:text="Hrát"
                android:textSize="36sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonVysledky"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:onClick="vypisScore"
                android:text="Výsledky"
                android:textSize="36sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Space
                android:layout_width="90dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonKonec"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:onClick="konec"
                android:text="Ukončit"
                android:textSize="36sp" />
        </TableRow>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>